<Window x:Class="MathCalcPrice.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathCalcPrice"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontFamily="Roboto" FontSize="16" Grid.Column="0"></TextBlock>
                <Button FontFamily="Roboto" FontSize="16" Grid.Column="1">Указать путь до файла</Button>
            </Grid>
            <Label FontSize="18" FontFamily="Roboto" Foreground="Black">Объекты для обновления</Label>
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя объекта"/>
                        <GridViewColumn Header="Столбцы"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Click="Button_Click" FontSize="25" >CREATE</Button>
        </StackPanel>
    </Grid>
</Window>
